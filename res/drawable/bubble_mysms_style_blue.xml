<?xml version="1.0" encoding="utf-8"?>
<layer-list
	xmlns:android="http://schemas.android.com/apk/res/android">
	
	<item android:left="2px" android:top="2px">
		<shape android:shape="rectangle">
			<corners android:radius="5dp" />
			<solid android:color="#40A0A0A0" />
		</shape>
	</item>
	
	<item android:right="1px" android:bottom="1px">
		<shape android:shape="rectangle">
			<corners android:radius="5dp" />
			<solid android:color="#9e9e9e" />
		</shape>
	</item>
	
	<item android:right="2px" android:bottom="2px" android:left="1px" android:top="1px">
		<shape android:shape="rectangle">
			<corners android:radius="5dp" />
			
			<gradient
				android:type="linear"
				android:angle="270"
				android:startColor="#EEF8FB"
				android:endColor="#D8EEF6" />
			
			<padding
				android:top="8dp"
				android:right="8dp"
				android:bottom="8dp"
				android:left="8dp" />
		</shape>
	</item>
</layer-list>